# Application
APP_NAME=SEO_GEO_System
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/seo_geo_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
GOOGLE_SEARCH_CONSOLE_CLIENT_ID=your-gsc-client-id
GOOGLE_SEARCH_CONSOLE_CLIENT_SECRET=your-gsc-client-secret
AHREFS_API_KEY=your-ahrefs-api-key
SEMRUSH_API_KEY=your-semrush-api-key
GTMETRIX_EMAIL=your-gtmetrix-email
GTMETRIX_API_KEY=your-gtmetrix-api-key

# Azure OpenAI (Optional)
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Authentication
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=csv,xlsx,txt

# Crawler Settings
CRAWLER_USER_AGENT=SEO-GEO-Bot/1.0
CRAWLER_TIMEOUT=30
CRAWLER_MAX_PAGES=100

# External Services
PAGESPEED_API_KEY=your-pagespeed-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_METRICS_PORT=9090

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_NAME=SEO & GEO System

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
